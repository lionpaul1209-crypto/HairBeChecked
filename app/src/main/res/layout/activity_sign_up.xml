<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <ImageView
        android:id="@+id/tvTitle"
        android:layout_width="410dp"
        android:layout_height="342dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/anotherlogo4" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="362dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edittext_background"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textColor="#1E88E5"
        android:textColorHint="#90CAF9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <EditText
        android:id="@+id/etEmail3"
        android:layout_width="163dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edittext_background"
        android:hint="성별"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textColor="#1E88E5"
        android:textColorHint="#90CAF9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmail" />

    <EditText
        android:id="@+id/etEmail4"
        android:layout_width="172dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edittext_background"
        android:hint="나이"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textColor="#1E88E5"
        android:textColorHint="#90CAF9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/etEmail3"
        app:layout_constraintTop_toBottomOf="@+id/etEmail" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edittext_background"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="#1E88E5"
        android:textColorHint="#90CAF9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmail3" />

    <EditText
        android:id="@+id/etPassword2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edittext_background"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="#1E88E5"
        android:textColorHint="#90CAF9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPassword" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="357dp"
        android:layout_height="54dp"
        android:layout_marginTop="160dp"
        android:background="#1E88E5"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPassword" />


</androidx.constraintlayout.widget.ConstraintLayout>
