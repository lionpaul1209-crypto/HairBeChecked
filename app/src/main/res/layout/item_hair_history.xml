<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivHistoryImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:background="#F0F0F0"
            android:contentDescription="히스토리 이미지" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHistoryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024.03.15"
                android:textSize="13sp"
                android:textColor="#757575"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHistoryStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="웨이브 미디엄 헤어"
                android:textSize="17sp"
                android:textColor="#212121"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHistoryFaceShape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="얼굴형: 계란형"
                android:textSize="13sp"
                android:textColor="#9E9E9E" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnDeleteHistory"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="삭제" />

    </LinearLayout>

</androidx.cardview.widget.CardView>